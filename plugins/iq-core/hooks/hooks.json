{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "(tool == 'Edit' || tool == 'Write') && tool_input.file_path matches '\\.(ts|tsx|js|jsx)$'",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-console.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "stop_reason == 'end_turn'",
        "hooks": [
          {
            "type": "command",
            "command": "#!/bin/bash\necho '[Reminder] Run tests and typecheck before pushing'"
          }
        ]
      }
    ]
  }
}
